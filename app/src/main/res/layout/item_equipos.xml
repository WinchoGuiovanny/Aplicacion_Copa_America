<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/equiposItemId">

    <LinearLayout
        android:id="@+id/myLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fechaencuentro"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Fecha"
            android:textColor="#FFFF"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/banderaA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/japon"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/equipoA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Equipo A"
                    android:textColor="#FCB60A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/puntosA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Score Equipo A"
                    android:textColor="#FCB60A"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/equipoB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Equipo B"
                    android:textColor="#FCB60A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/puntosB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Score Equipo B"
                    android:textColor="#FCB60A"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/banderaB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/japon" />


        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>